{% extends 'default/layout/base.Twig' %}
{% block title %} 发言 {% endblock %}

{% block content %}
	<div class="p-2">
		<form action="/memo/save" method="post">
			<input type="hidden" name="id" value="{{ data.id }}">
			<div class="field">
				<div class="control">
					<input id="content" type="hidden" name="content" value="{{ data.content }}"/>
					<div id="editor"></div>
				</div>
				{% if exception starts with '内容' %}
					<p class="help is-danger">{{ exception }}</p>
				{% endif %}
			</div>
			<div class="field is-grouped">
				<div class="control">
					<button class="button is-link is-small">
						<span>发言</span>
					</button>
					<a class="button is-small" href="/">
						<span>返回</span>
					</a>
				</div>
			</div>
		</form>

	</div>
{% endblock %}

{% block beforeScript %}
	<script src="https://cdn.mblog.club/mm/toastui-editor-all.min.js"></script>
	<script src="https://cdn.mblog.club/mm/toast.zh.cn.min.js"></script>
	<link rel="stylesheet" href="https://cdn.mblog.club/mm/toastui-editor.min.css"/>
{% endblock %}

