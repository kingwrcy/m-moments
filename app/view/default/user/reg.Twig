{% extends 'default/layout/base.Twig' %}
{% block title %} 注册用户 {% endblock %}
{% block content %}
	{% if  sysConfig.config.disable_register != "on" %}
		<form action="/user/doReg" method="post" class="px-10 py-4">
			<div class="bulma-field">
				<label for="username" class="bulma-label bulma-is-small">用户名</label>
				<div class="bulma-control">
					<input class="bulma-input bulma-is-small" type="text" name="username" value="{{ data.username }}">
				</div>
				{% if exception starts with '用户名' %}
					<p class="bulma-help bulma-is-danger">{{ exception }}</p>
				{% endif %}
			</div>

			<div class="bulma-field">
				<label for="password" class="bulma-label bulma-is-small">密码</label>
				<div class="bulma-control">
					<input class="bulma-input bulma-is-small" type="password" name="password" value="{{ data.password }}">
				</div>
				{% if exception starts with '密码' %}
					<p class="bulma-help bulma-is-danger">{{ exception }}</p>
				{% endif %}
			</div>

			<div class="bulma-field">
				<label for="repeatPassword" class="bulma-label bulma-is-small">重复密码</label>
				<div class="bulma-control">
					<input class="bulma-input bulma-is-small" type="password" name="repeatPassword" value="{{ data.repeatPassword }}">
				</div>
				{% if exception starts with '重复密码' %}
					<p class="bulma-help bulma-is-danger">{{ exception }}</p>
				{% endif %}
			</div>


			<div class="bulma-field">
				<label for="email" class="bulma-label bulma-is-small">邮箱</label>
				<div class="bulma-control">
					<input placeholder="会用来生成头像,请填写常用邮箱" class="bulma-input bulma-is-small" type="text" name="email"
					       value="{{ data.email }}">
				</div>
				{% if exception starts with '邮箱' %}
					<p class="bulma-help bulma-is-danger">{{ exception }}</p>
				{% endif %}

			</div>

			{% if message %}
				<div class="bulma-block bulma-has-text-success">{{ message }}</div>
			{% endif %}

			<div class="bulma-field bulma-is-grouped">
				<div class="bulma-control">
					<button class="bulma-button bulma-is-link bulma-is-small">
						<span>注册用户</span>
					</button>

					<a class="bulma-button bulma-is-light bulma-is-small" href="/user/login">去登录</a>
				</div>

			</div>

		</form>
	{% else %}
		<div class="px-10 py-4">不开放注册!</div>
	{% endif %}
{% endblock %}